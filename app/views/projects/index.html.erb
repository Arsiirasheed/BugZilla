<%= render 'layouts/header' %>
<section id="projects">
  
  <div class="container-fluid pt-5 mt-3">
    
    <p id="notice"><%= notice %></p>
    
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
      <h1 class="h3 mb-0 text-gray-800">Projects</h1>
      <% if policy(Project).new? %>
        <a href="<%= new_project_path %>" class="btn btn-sm btn-dark mdb-color darken-3 text-white"><i class="fa fa-plus fa-sm text-white"></i>
          create new Project</a>
      <% end %>
    </div>
    
    <% @projects.each do |project| %>
      
      
      <div class="row mb-4">
        
        
        <div class="col-lg-12">
          
          <!-- Card -->
          <div class="card">
            
            <!-- Card content -->
            <div class="card-body">
              
              <div class="card-title">
                
                <div class="justify-content-between">
                  <h4>
                    <%= link_to project.title, project_path(project) %>
                    
                    
                    
                    <div class="float-right">
                      <% if policy(project).delete? %>
                        <%= link_to project, method: :delete, data: {confirm: "Are you sure you want to delete this user?"}, class: "btn btn-responsive btn-default btn-sm mdb-color darken-3 " do %>
                          <%= fa_icon "bitbucket" %> Delete
                        <% end %>
                      <% end %>
                      
                      <% if policy(project).edit? %>
                        <%= link_to edit_project_path(project), class: "btn btn-responsive btn-default btn-sm mdb-color darken-3" do %>
                          <%= fa_icon "pencil" %> Edit
                        <% end %>
                      <% end %>
                    </div>
                  
                  
                  </h4>
                
                
                </div>
              </div>
              <!-- Title -->
              <hr>
              <!-- Text -->
              
              <div class="fr-view">
                
                
                <p class="card-text"><%= raw project.description %>
                </p>
              </div>
            </div>
            
            <!-- Card footer -->
            <div class="rounded-bottom mdb-color darken-3  pt-3">
              <ul class="list-unstyled list-inline font-small">
                <li class="list-inline-item pr-2 white-text">
                  <i class="far fa-clock pr-1"></i><b>Started</b>: <%= project.created_at.to_date %>
                </li>
                <li class="list-inline-item pr-2">
                  <div class="white-text"><i class="fa fa-bug pr-1"></i><%= project.bugs.count %></div>
                </li>
                <li class="list-inline-item pr-2">
                  <div class="white-text"><i class="fa fa-empire pr-1"> </i><%= project.bugs.Resolved.count %></div>
                </li>
                <li class="list-inline-item">
                  <div class="white-text"><i class="fa fa-user pr-1"> <%= project.enrolled_user.count %> </i></div>
                </li>
              </ul>
            </div>
          
          </div>
          <!-- Card -->
        </div>
      
      
      </div>
    
    
    <% end %>
  
  
  </div>
  
  <!-- Content Row -->

</section>











